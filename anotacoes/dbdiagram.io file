// Use DBML to define your database structure
// Docs: https://dbml.dbdiagram.io/docs


Table users {
  id integer [primary key]
  name varchar
  link_profile varchar
  linkedin_id varchar
  created_at timestamp
}

Table experiences {
  id integer [primary key]
  company varchar
  workload varchar
  period varchar
  location varchar
  description text [note: 'Description of the experience']
  user_id integer
  created_at timestamp
}

Table education {
  id integer [primary key]
  college varchar
  course varchar
  period varchar
  description text [note: 'Description of the course']
  user_id integer
  created_at timestamp
}

Ref: experiences.user_id > users.id
Ref: education.user_id > users.id
